{
  "name": "Color picker",
  "description": "The best color picker in the market.",
  "version": "0.0.1",
  "manifest_version": 3,
  "action": {
    "default_popup": "./Popup.html",
    "default_icon": {
      "16": "favicon16.png",
      "32": "favicon32.png"
    }
  },
  "icons": {
    "16": "favicon16.png",
    "32": "favicon32.png",
    "48": "favicon16.png",
    "128": "favicon32.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["./contentScript.js"]
    }
  ],
  "permissions": ["tabs", "storage"],
  "host_permissions": ["<all_urls>"]
}
